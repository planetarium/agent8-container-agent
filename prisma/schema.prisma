generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model machine {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  token      String?  @db.VarChar
  machine_id String?  @db.VarChar
  deleted    Boolean? @default(false)
  ipv6       String?  @db.VarChar
}

model machine_pool {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  machine_id String   @unique @db.VarChar
  deleted    Boolean  @default(false)
  ipv6       String?  @db.VarChar
  assigned_to String? @db.VarChar
  assigned_at DateTime? @db.Timestamp()
  is_available Boolean @default(true)
}

model gitlab_issues {
  id              BigInt   @id @default(autoincrement())
  gitlab_issue_id Int      @unique
  gitlab_iid      Int
  project_id      Int
  title           String   @db.VarChar
  description     String?
  labels          String
  author_username String   @db.VarChar
  web_url         String   @db.VarChar
  created_at      DateTime @db.Timestamptz(6)
  processed_at    DateTime @default(now()) @db.Timestamptz(6)
  container_id    String?  @db.VarChar

  @@index([project_id])
  @@index([processed_at])
  @@index([container_id])
  @@map("gitlab_issues")
}
