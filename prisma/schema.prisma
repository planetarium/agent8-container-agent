generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model machine {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  token      String?  @db.VarChar
  machine_id String?  @db.VarChar
  deleted    Boolean? @default(false)
  ipv6       String?  @db.VarChar
}

model machine_pool {
  id           BigInt   @id @default(autoincrement())
  created_at   DateTime @default(now())
  machine_id   String   @unique @db.VarChar
  deleted      Boolean  @default(false)
  ipv6         String?
  assigned_to  String?  @db.VarChar
  assigned_at  DateTime?
  is_available Boolean  @default(true)

  // 예약 관련 필드들
  status           String   @default("active") @db.VarChar  // "active", "reserved", "creating"
  reservation_id   String?  @db.VarChar                     // 예약 배치 ID
  reservation_type String?  @db.VarChar                     // "replenish", "user_request" 등
  expires_at       DateTime?                               // 예약 만료 시간
}
