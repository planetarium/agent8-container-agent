{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "files": {
    "ignore": ["protocol", "pty-wrapper", "scripts", "merge-dependencies.js"]
  },
  "formatter": {
    "useEditorconfig": true
  },
  "linter": {
    "rules": {
      "all": true,
      "correctness": {
        "noNodejsModules": "off"
      },
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["debug", "info", "warn", "error"]
          }
        },
        "noExplicitAny": "off"
      },
      "performance": {
        "noBarrelFile": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noParameterProperties": "off"
      }
    }
  }
}
