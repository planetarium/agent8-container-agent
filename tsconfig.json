{
  "compilerOptions": {
    "strict": true,
    "target": "es2024",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/bun-types",
      "./types"
    ]
  },
  "include": [
    "src/**/*",
    "index.ts",
    "preview.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
